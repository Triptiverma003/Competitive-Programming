class Solution {
public:

    long long solve(int dice , int face , int x){
        //Base Case
       if (dice == 0 && x == 0) return 1; 
       if (dice == 0 || x < 0) return 0;
       
        long long ans = 0;
        for(int i = 1; i<=face; i++){
            ans = ans + solve(dice-1 , face , x-i);
        }

        return ans;

    }
    int numRollsToTarget(int d, int f, int target) {
        return solve(d, f , target);
    }
};
